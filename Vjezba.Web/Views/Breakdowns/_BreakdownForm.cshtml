@model Radionica.Model.Breakdown


<div class="form-group">
    <label class="control-label">Breakdown name:</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Fixing time (Hours):</label>
    <input asp-for="FixingTime" type="number" class="form-control" />
    <span asp-validation-for="FixingTime" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="grad">Client:</label>
    <select asp-for="ClientID" asp-items="@ViewBag.Clients" class="form-control" id="client"></select>
    <span asp-validation-for="ClientID" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="grad">Employee:</label>
    <select asp-for="EmployeeID" asp-items="@ViewBag.Employees" class="form-control" id="client"></select>
    <span asp-validation-for="EmployeeID" class="text-danger"></span>
</div>