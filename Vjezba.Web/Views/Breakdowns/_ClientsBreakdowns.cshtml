@model List<Radionica.Model.Breakdown>

<h2>Requested fixings</h2>
@if (Model.Count() == 0)
{
    <p class="alert alert-info">Client has no requested repairs.</p>
}
else
{
    <table class="col-md-12 table table-hover">
        <tr>
            <th>Repair</th>
            <th>Time</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.FixingTime h</td>
                <td><a class="btn btn-danger" onclick="deleteBreakdown(@item.ID)" >Delete</a></td>
            </tr>
        }
    </table>
}